                    for s in tvals:
                      plot8+=point3d((2*cos(s)+1,2*sin(s)-2,0),color="blue",size=15)
                      plot8+=line([(2*cos(s)+1,2*sin(s)-2,scale),(2*cos(s)+1,2*sin(s)-2,-scale)],color="green",thickness=2)
                    show(plot8,aspect_ratio=1)
                  </slate>
                </interactive>
              </figure>
          </p>
        </solution>
