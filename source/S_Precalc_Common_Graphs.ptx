                plot30+=implicit_plot3d(lhs==rhs,(x,-3,3),(y,-3,3),(z,-3,3),color="gray",opacity=0.4)
                for xs in xlist:
                    plot30+=implicit_plot3d(lhs==rhs,(x,xs-d,xs+d),(y,-scale,scale),(z,-scale,scale),color="blue")
                for ys in ylist:
