                plot8+=point((2*a,a),color="blue",size=30,zorder=3)+text("$(2k,k)$",(2*a+0.3,a-0.1),color="blue",fontsize=15)
              elif(sign(2-a)==1):
                plot8+=line([(a,a),(a+1,a)],color="magenta",linestyle="--",thickness=2)
                plot8+=text("$y=k$",(a+0.4,a+0.1),color="magenta",fontsize=15)
