      <sageplot>
        var('t')
        paths=[(t+1,1),(1,t+1),(1,1-t),(1-t,1),(1-t,1+t),(1+t,1+2*t^2),(1-t,1-t-0.1*sin(20*t))]
        plot4=point((1,1),size=40,color="black",ticks=[[],[]],zorder=5,ymin=-0.1,ymax=2,xmin=-0.1,xmax=2,axes_labels=["$x$","$y$"],aspect_ratio=1)
        plot4+=text("$(a,b)$",(1.15,0.9),color="black",fontsize=15)
        for p in paths:
          r(t)=p
          plot4+=parametric_plot(r,(t,0,0.75),color="gray",thickness=2)
          plot4+=arrow(r(t=0.25),r(t=0.2),color="gray",arrowsize=3)
        plot4
      </sageplot>
    </image>
  </figure> 
  <example xml:id="LimitEx1">
