          def limitplot(s1=checkbox(True,label="Show Surface")):
            var('t')
            scale=0.5
            plot2=axes(scale,0.5,color="black",aspect_ratio=[1,1,0.25])
            plot2+=text3d("x",(scale+0.1,0,0),fontsize=30)+text3d("y",(0,scale+0.1,0),fontsize=30)+text3d("z",(0,0,scale+0.25),fontsize=30)
            var('x,y')
            f(x,y)=3-x-2*y
            if(s1):
              plot2+=plot3d(f,(x,-.5,0.5),(y,-0.5,0.5),color="gray",mesh=True,opacity=0.25,plot_points=5)
            plot2+=point((0,0,3),size=15,color="black")+text3d("(0,0,3)",(0.3,-0.1,3.5),color="black",fontsize=25,zorder=10)
            paths=[(t,0),(0,t+0),(0,0-t),(0-t,0),(0-t,0+t),(0+t,0+2*t^2),(0-t,0-t-0.1*sin(20*t))]
            for p in paths:
              r1(t)=(p[0],p[1],0)
              r2(t)=(p[0],p[1],f(p[0],p[1]))
              plot2+=parametric_plot3d(r1,(t,0,0.5),color="blue",thickness=2,zorder=5)
              plot2+=arrow(r1(t=0.25),r1(t=0.2),color="blue",arrowsize=3,zorder=5)
              plot2+=parametric_plot3d(r2,(t,0,0.5),color="red",thickness=2)
